</nav>

<div class="container">
    <!-- Hero Section -->
    <div class="hero-section">
        <h1>ü§ñ AI Style Assistant</h1>
        <p>Get personalized fashion recommendations powered by OpenAI</p>
        <button id="heroOpenAIBtn" class="btn btn-light" style="font-weight: 600; padding: 0.75rem 2rem;">
            Try AI Features
        </button>
    </div>

    <!-- Features -->
    <div class="feature-grid">
        <div class="feature-card">
            <div class="icon">üí°</div>
            <h3>Get Recommendations</h3>
            <p>AI analyzes your wardrobe and suggests outfit combinations</p>
        </div>
        <div class="feature-card">
            <div class="icon">üìä</div>
            <h3>Style Analysis</h3>
            <p>Get insights about your personal style from your OOTD posts</p>
        </div>
        <div class="feature-card">
            <div class="icon">üí¨</div>
            <h3>Fashion Chat</h3>
            <p>Ask questions about fashion, styling, and wardrobe advice</p>
        </div>
        <div class="feature-card">
            <div class="icon">üè∑Ô∏è</div>
            <h3>Smart Tagging</h3>
            <p>AI suggests relevant tags when you upload clothing items</p>
        </div>
    </div>

    <!-- How It Works -->
    <div class="section">
        <h2>How It Works</h2>
        <div style="line-height: 1.8; color: var(--gray);">
            <p><strong style="color: var(--dark);">1. Get Outfit Recommendations</strong><br>
            The AI analyzes all items in your wardrobe and suggests creative outfit combinations based on color, style, and condition. Perfect for discovering new looks!</p>
            
            <p><strong style="color: var(--dark);">2. Analyze Your Style</strong><br>
            Your OOTD posts are reviewed to identify your personal style patterns. Get personalized tips to enhance your fashion sense.</p>
            
            <p><strong style="color: var(--dark);">3. Chat with AI Assistant</strong><br>
            Ask any fashion-related questions. Get advice on styling, clothing care, wardrobe organization, and more.</p>
            
            <p><strong style="color: var(--dark);">4. Smart Tagging</strong><br>
            When uploading new items, the AI suggests relevant tags automatically. Save time and keep your wardrobe organized!</p>
        </div>
    </div>

    <!-- Recent Recommendations -->
    <div class="section">
        <h2>Recent Recommendations</h2>
        <div id="recommendationsContainer">
            <div class="empty-state">
                <p>No recommendations yet.</p>
                <button id="firstRecommendationBtn" class="btn-primary-custom">Get Your First Recommendation</button>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 2rem;">
        <button id="getRecommendationsBtn" class="btn-primary-custom" style="width: 100%; padding: 1rem;">
            üí° Get Recommendations
        </button>
        <button id="getStyleAnalysisBtn" class="btn-primary-custom" style="width: 100%; padding: 1rem;">
            üìä Analyze My Style
        </button>
        <button id="openAIFeaturesBtn" class="btn-primary-custom" style="width: 100%; padding: 1rem;">
            üí¨ Chat with AI
        </button>
    </div>

    <!-- Footer -->
    <div style="text-align: center; padding: 2rem 0; color: var(--gray); font-size: 0.9rem;">
        <p>AI-powered style recommendations to help you make the most of your wardrobe.</p>
    </div>

    <!-- Notification Container -->
    <div id="notificationContainer" style="position: fixed; top: 20px; right: 20px; z-index: 1000;"></div>
</div>

<script>
    // Show notification message
    function showNotification(message, type = 'info') {
        const container = document.getElementById('notificationContainer');
        const alert = document.createElement('div');
        alert.className = `alert alert-${type} alert-dismissible fade show`;
        alert.style.marginBottom = '1rem';
        alert.innerHTML = `
            ${DOMPurify.sanitize(message)}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        `;
        container.appendChild(alert);
        
        // Auto-dismiss after 5 seconds
        setTimeout(() => {
            alert.remove();
        }, 5000);
    }

    async function getRecommendations() {
        const btn = document.getElementById('getRecommendationsBtn');
        const originalText = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = 'Loading...';
        
        const container = document.getElementById('recommendationsContainer');
        container.innerHTML = '<div style="padding: 2rem; text-align: center;"><div class="loading"></div><div class="loading"></div><div class="loading"></div></div>';

        try {
            const response = await fetch('/api/ai/recommendations');
            
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            
            const data = await response.json();

            if (data.success) {
                // Create elements safely to prevent XSS
                const item = document.createElement('div');
                item.className = 'recommendation-item';
                
                const label = document.createElement('div');
                label.className = 'label';
                label.textContent = 'üéØ Outfit Recommendations';
                
                const p = document.createElement('p');
                p.textContent = data.recommendation;
                // Replace newlines with <br> tags safely
                p.innerHTML = p.innerHTML.replace(/\n/g, '<br>');
                
                item.appendChild(label);
                item.appendChild(p);
                container.innerHTML = '';
                container.appendChild(item);
            } else {
                const message = DOMPurify.sanitize(data.message || 'Unable to load recommendations');
                container.innerHTML = `<div class="empty-state"><p>${message}</p></div>`;
            }
        } catch (error) {
            console.error('Error:', error);
            container.innerHTML = '<div class="empty-state"><p>Error loading recommendations. Please try again.</p></div>';
        } finally {
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }

    async function getStyleAnalysis() {
        const btn = document.getElementById('getStyleAnalysisBtn');
        const originalText = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = 'Loading...';
        
        const container = document.getElementById('recommendationsContainer');
        container.innerHTML = '<div style="padding: 2rem; text-align: center;"><div class="loading"></div><div class="loading"></div><div class="loading"></div></div>';

        try {
            const response = await fetch('/api/ai/style-analysis');
            
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}: ${response.statusText}`);
            }
            
            const data = await response.json();

            if (data.success) {
                // Create elements safely to prevent XSS
                const item = document.createElement('div');
                item.className = 'recommendation-item';
                
                const label = document.createElement('div');
                label.className = 'label';
                label.textContent = 'üìä Style Analysis';
                
                const p = document.createElement('p');
                p.textContent = data.analysis;
                // Replace newlines with <br> tags safely
                p.innerHTML = p.innerHTML.replace(/\n/g, '<br>');
                
                item.appendChild(label);
                item.appendChild(p);
                container.innerHTML = '';
                container.appendChild(item);
            } else {
                const message = DOMPurify.sanitize(data.message || 'Unable to load style analysis');
                container.innerHTML = `<div class="empty-state"><p>${message}</p></div>`;
            }
        } catch (error) {
            console.error('Error:', error);
            container.innerHTML = '<div class="empty-state"><p>Error loading style analysis. Please try again.</p></div>';
        } finally {
            btn.disabled = false;
            btn.innerHTML = originalText;
        }
    }

    function openAIFeatures() {
        showNotification('üí¨ <strong>Chat Assistant:</strong> Available in the chatbot widget at the bottom right of any page!', 'info');
    }

    // Attach event listeners after DOM is ready
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('getRecommendationsBtn').addEventListener('click', getRecommendations);
        document.getElementById('getStyleAnalysisBtn').addEventListener('click', getStyleAnalysis);
        document.getElementById('openAIFeaturesBtn').addEventListener('click', openAIFeatures);
        document.getElementById('heroOpenAIBtn').addEventListener('click', openAIFeatures);
        
        const firstBtn = document.getElementById('firstRecommendationBtn');
        if (firstBtn) {
            firstBtn.addEventListener('click', getRecommendations);
        }
    });
</script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
