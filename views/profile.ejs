<div class="container py-4">

    <!-- Flash messages -->
    <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success alert-message"><%= success_msg %></div>
    <% } %>
    <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
        <div class="alert alert-danger alert-message"><%= error_msg %></div>
    <% } %>
    <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-info alert-message"><%= message %></div>
    <% } %>

    <!-- PROFILE HEADER -->
    <div class="profile-header">
        <% if (user && user.profile_image_url) { %>
            <img src="<%= user.profile_image_url %>" alt="Profile" class="profile-photo">
        <% } else { %>
            <div class="profile-initial">
                <%= user && user.username ? user.username.charAt(0).toUpperCase() : '?' %>
            </div>
        <% } %>

        <div class="profile-main">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                <div>
                    <div class="profile-username"><%= user ? user.username : 'My Profile' %></div>
                    <div class="profile-meta">
                        <% if (user && user.email) { %>
                            <div><strong>Email:</strong> <%= user.email %></div>
                        <% } %>
                        <% if (user && user.gender) { %>
                            <div><strong>Gender:</strong> <%= user.gender %></div>
                        <% } %>
                    </div>
                </div>
                <div class="profile-actions text-end">
                    <% if (user && user.user_id) { %>
                        <a href="/users/<%= user.user_id %>" class="pill-link">
                            View public profile
                        </a>
                    <% } %>
                    <a href="/profile/edit" class="pill-link">
                        Edit profile
                    </a>
                    
                </div>
            </div>
        </div>
    </div>

    <!-- OPTIONAL STATS -->
    <div class="row mb-3">
        <div class="col-12 col-md-8">
            <div class="section-title">Wardrobe</div>
            <div class="section-subtitle">
                Quickly jump to manage your personal items or swap-ready pieces.
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="stats-card p-3">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="stat-number">
                            <%= (typeof wardrobeStats !== 'undefined' && wardrobeStats && wardrobeStats.total) ? wardrobeStats.total : 0 %>
                        </div>
                        <div class="stat-label">Total items</div>
                    </div>
                    <div>
                        <div class="stat-number">
                            <%= (typeof wardrobeStats !== 'undefined' && wardrobeStats && wardrobeStats.swap) ? wardrobeStats.swap : 0 %>
                        </div>
                        <div class="stat-label">Swap items</div>
                    </div>
                    <div>
                        <div class="stat-number">
                            <%= (typeof wardrobeStats !== 'undefined' && wardrobeStats && wardrobeStats.personal) ? wardrobeStats.personal : 0 %>
                        </div>
                        <div class="stat-label">Personal</div>
                    </div>
                </div>
                <div class="mt-2 text-end">
                    <a href="/wardrobe" class="btn btn-sm btn-outline-secondary" style="border-radius:999px;">
                        Manage wardrobe
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- OOTD POSTS SECTION -->
    <div class="mt-4">
        <div class="section-title d-flex justify-content-between align-items-center">
            <span>My OOTD Posts</span>
            <a href="/create-ootd" class="btn btn-sm btn-primary pill-link-red" style="border-radius:999px;">
                + Create OOTD
            </a>
        </div>
        <div class="section-subtitle">
            All your outfits â€“ private and public. Edit or remove them anytime.
        </div>

        <%
            // always have an array to work with
            const myOotdPosts = (typeof ootdPosts !== 'undefined' && ootdPosts) ? ootdPosts : [];
        %>

        <% if (myOotdPosts.length > 0) { %>
            <div class="row g-4">
                <% myOotdPosts.forEach(post => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="ootd-card">

                            <!-- IMAGE AREA: same style as clothing items, with optional carousel -->
                            <div class="ootd-image-wrapper">
                                <% 
                                    const imgList = [];
                                    if (post.image_url_1) imgList.push(post.image_url_1);
                                    if (post.image_url_2) imgList.push(post.image_url_2);
                                    if (post.image_url_3) imgList.push(post.image_url_3);
                                %>

                                <% if (imgList.length === 0) { %>
                                    <div class="ootd-image d-flex align-items-center justify-content-center text-muted">
                                        No image
                                    </div>
                                <% } else if (imgList.length === 1) { %>
                                    <img src="<%= imgList[0] %>" alt="OOTD" class="ootd-image">
                                <% } else { %>
                                    <div id="ootdCarousel-<%= post.post_id %>" class="carousel slide w-100" data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                            <% imgList.forEach((src, idx) => { %>
                                                <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
                                                    <img src="<%= src %>" class="ootd-image d-block mx-auto" alt="OOTD image <%= idx + 1 %>">
                                                </div>
                                            <% }) %>
                                        </div>
                                        <button class="carousel-control-prev" type="button" data-bs-target="#ootdCarousel-<%= post.post_id %>" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#ootdCarousel-<%= post.post_id %>" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                <% } %>
                            </div>

                            <div class="p-3">
                                <% if (post.caption) { %>
                                    <div class="ootd-caption mb-2"><%= post.caption %></div>
                                <% } else { %>
                                    <div class="ootd-caption text-muted mb-2 fst-italic">No caption</div>
                                <% } %>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="pill-tag <%= post.visibility === 'private' ? 'pill-tag-private' : 'pill-tag-public' %>">
                                        <%= post.visibility === 'private' ? 'Private' : 'Public' %>
                                    </span>
                                    <span style="font-size:0.75rem;color:#6b7280;">
                                        #<%= post.post_id %>
                                    </span>
                                </div>

                                <div style="font-size:0.75rem;color:#6b7280;">
                                    <% if (post.created_at) { %>
                                        Posted: <%= post.created_at.toLocaleString ? post.created_at.toLocaleString() : post.created_at %>
                                    <% } %>
                                </div>
                            </div>

                            <div class="ootd-stats">
                                <div class="ootd-stat-item">
                                    <span>â™¥</span>
                                    <span><strong><%= post.like_count || 0 %></strong> likes</span>
                                </div>
                                <div class="ootd-stat-item">
                                    <span>ðŸ’¬</span>
                                    <span><strong><%= post.comment_count || 0 %></strong> comments</span>
                                </div>
                            </div>

                            <div class="ootd-footer">
                                <div class="text-muted">
                                    Manage
                                </div>
                                <div>
                                    <a href="/ootd/<%= post.post_id %>/edit"
                                       class="btn btn-sm btn-outline-secondary btn-sm-rounded me-1">
                                        Edit
                                    </a>
                                    <form action="/ootd/<%= post.post_id %>/delete"
                                          method="POST"
                                          style="display:inline;"
                                          onsubmit="return confirm('Delete this OOTD post?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger btn-sm-rounded">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <h5>No OOTD posts yet</h5>
                <p>Share your first outfit of the day and build your style history here.</p>
                <a href="/create-ootd" class="btn btn-primary pill-link-red" style="border-radius:999px;">
                    + Create your first OOTD
                </a>
            </div>
        <% } %>
    </div>

</div>

<!-- AI CHATBOT WIDGET -->
<%- include('ai-chatbot-widget') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
