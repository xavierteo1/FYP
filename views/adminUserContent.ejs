<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Admin | User Content</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/global-design.css" rel="stylesheet">

  <style>
    .card-shell {
      border: none;
      border-radius: 18px;
      box-shadow: 0 10px 25px rgba(15,23,42,0.08);
      overflow: hidden;
      background: #fff;
    }
    .section-title { font-weight: 900; margin: 0; }
    .muted { color: #6b7280; font-size: .9rem; }
    .pill {
      border-radius: 999px;
      padding: 6px 10px;
      background: #f3f4f6;
      border: 1px solid #e5e7eb;
      font-size: .8rem;
      display: inline-flex;
      gap: 8px;
      align-items: center;
    }
    .btn-round { border-radius: 999px; }
    .thumb {
      width: 52px; height: 52px; border-radius: 14px;
      object-fit: cover; border: 1px solid #e5e7eb;
      background: #fff;
    }
    .post-img {
      width: 100%;
      height: 220px;
      object-fit: cover;
      border-radius: 16px;
      border: 1px solid #eef2f7;
      background: #fff;
    }
    body { background: #f8fafc; }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
  <div class="container">
    <a class="navbar-brand" href="/adminpage" style="font-weight:900; letter-spacing:.06em; text-transform:uppercase;">
      Clothes <span style="color:#e60000;">Swap</span>
    </a>

    <div class="ms-auto d-flex gap-2">
      <a class="btn btn-sm btn-outline-secondary btn-round" href="/users">Back to Users</a>
      <a class="btn btn-sm btn-outline-secondary btn-round" href="/admin">Admin Dashboard</a>
    </div>
  </div>
</nav>

<div class="container py-4">

  <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success" style="border-radius:12px;"><%= success_msg %></div>
  <% } %>

  <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger" style="border-radius:12px;"><%= error_msg %></div>
  <% } %>

  <div class="card-shell p-3 p-md-4 mb-4">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
      <div>
        <h1 class="section-title">Admin — User Content</h1>
        <div class="muted">
          Viewing wardrobe + posts for <strong><%= targetUser.username %></strong> (#<%= targetUser.user_id %>) • <%= targetUser.email %>
        </div>
      </div>

      <div class="d-flex gap-2 flex-wrap">
        <span class="pill">Wardrobe: <strong><%= wardrobeItems.length %></strong></span>
        <span class="pill">Posts: <strong><%= posts.length %></strong></span>
      </div>
    </div>
  </div>

  <!-- Wardrobe -->
  <div class="card-shell mb-4">
    <div class="p-3 p-md-4 border-bottom" style="border-color:#eef2f7!important;">
      <h2 class="section-title" style="font-size:1.05rem;">Wardrobe Items</h2>
      <div class="muted">Tip: If an item is involved in swaps, use <strong>Hide</strong> instead of hard delete.</div>
    </div>

    <div class="table-responsive">
      <table class="table mb-0 align-middle">
        <thead>
          <tr>
            <th style="width:80px;">Image</th>
            <th>Title</th>
            <th style="width:130px;">Category</th>
            <th style="width:120px;">Status</th>
            <th style="width:180px;">Created</th>
            <th style="width:220px;">Admin Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (wardrobeItems.length > 0) { %>
            <% wardrobeItems.forEach(it => { %>
              <tr>
                <td>
                  <% if (it.image_url_1) { %>
                    <img class="thumb" src="<%= it.image_url_1 %>" alt="item">
                  <% } else { %>
                    <div class="thumb d-flex align-items-center justify-content-center muted">—</div>
                  <% } %>
                </td>

                <td style="font-weight:800;">
                  <%= it.title %>
                  <div class="muted">#<%= it.item_id %> • size: <%= it.size_label || '-' %> • color: <%= it.color || '-' %></div>
                </td>

                <td><span class="muted"><%= it.category %></span></td>

                <td>
                  <span class="badge text-bg-light" style="border:1px solid #e5e7eb;">
                    <%= it.status %>
                  </span>
                </td>

                <td class="muted">
                  <%= new Date(it.created_at).toLocaleString() %>
                </td>

                <td>
                  <div class="d-flex gap-2 flex-wrap">

                    <!-- HIDE (safe) -->
                    <form method="POST" action="/admin/users/<%= targetUser.user_id %>/wardrobe/<%= it.item_id %>/hide">
                      <button class="btn btn-sm btn-outline-secondary btn-round" type="submit">
                        Hide
                      </button>
                    </form>

                    <!-- HARD DELETE (will be blocked if linked to swap_matches) -->
                    <form method="POST" action="/admin/users/<%= targetUser.user_id %>/wardrobe/<%= it.item_id %>/delete"
                      onsubmit="return confirm('Hard delete this wardrobe item? If it has swap history, this may be blocked. Continue?');">
                      <button class="btn btn-sm btn-outline-danger btn-round" type="submit">
                        Hard Delete
                      </button>
                    </form>

                  </div>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center p-4">
                <div style="font-weight:900;">No wardrobe items</div>
                <div class="muted">This user has no clothing_items records.</div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Posts -->
  <div class="card-shell">
    <div class="p-3 p-md-4 border-bottom" style="border-color:#eef2f7!important;">
      <h2 class="section-title" style="font-size:1.05rem;">OOTD Posts</h2>
      <div class="muted">Deleting a post will cascade-delete its likes/comments (FK ON DELETE CASCADE).</div>
    </div>

    <div class="p-3 p-md-4">
      <% if (posts.length > 0) { %>
        <div class="row g-3">
          <% posts.forEach(p => { %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="p-3 border rounded-4" style="border-color:#eef2f7!important; background:#fff;">
                <% if (p.image_url_1) { %>
                  <img class="post-img mb-2" src="<%= p.image_url_1 %>" alt="post">
                <% } else { %>
                  <div class="post-img mb-2 d-flex align-items-center justify-content-center muted">No image</div>
                <% } %>

                <div style="font-weight:900;">
                  <%= p.caption || '(no caption)' %>
                </div>
                <div class="muted">
                  #<%= p.post_id %> • <%= p.visibility %> • <%= new Date(p.created_at).toLocaleString() %>
                </div>

                <div class="mt-3 d-flex gap-2 flex-wrap">
                  <form method="POST" action="/admin/users/<%= targetUser.user_id %>/ootd/<%= p.post_id %>/delete"
                    onsubmit="return confirm('Delete this post? This will remove likes/comments too. Continue?');">
                    <button class="btn btn-sm btn-outline-danger btn-round" type="submit">Delete Post</button>
                  </form>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="text-center p-4">
          <div style="font-weight:900;">No posts</div>
          <div class="muted">This user has no ootd_posts records.</div>
        </div>
      <% } %>
    </div>
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- AI Chatbot Widget -->
<%- include('ai-chatbot-widget') %>

</body>
</html>
