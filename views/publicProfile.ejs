<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Load reviews when tab is clicked
    document.addEventListener('DOMContentLoaded', function() {
        const reviewsTab = document.querySelector('[data-bs-target="#reviews"]');
        if (reviewsTab) {
            // Use Bootstrap's tab event
            reviewsTab.addEventListener('shown.bs.tab', function() {
                loadReviews(<%= profileUser.user_id %>);
            });
            
            // Also add click event as fallback
            reviewsTab.addEventListener('click', function() {
                loadReviews(<%= profileUser.user_id %>);
            });
        }
    });

    function loadReviews(userId) {
        console.log('Loading reviews for user:', userId);
        fetch(`/api/users/${userId}/reviews`)
            .then(response => response.json())
            .then(data => {
                console.log('Reviews data received:', data);
                const container = document.getElementById('reviewsContainer');
                if (data.success && data.reviews && data.reviews.length > 0) {
                    let html = '<div class="row g-3">';
                    data.reviews.forEach(review => {
                        const stars = '‚≠ê'.repeat(review.rating);
                        html += `
                            <div class="col-12">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex gap-2 align-items-start mb-2">
                                            <img src="${review.profile_image_url || '/images/default-avatar.png'}" 
                                                 alt="${review.username}" 
                                                 style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
                                            <div class="flex-grow-1">
                                                <strong>${review.username}</strong>
                                                <div class="text-warning" style="font-size: 0.9rem;">${stars}</div>
                                            </div>
                                        </div>
                                        <p class="card-text mb-1">${review.comment || 'No comment provided'}</p>
                                        <small class="text-muted">${new Date(review.created_at).toLocaleDateString()}</small>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    html += '</div>';
                    container.innerHTML = html;
                } else {
                    container.innerHTML = '<div class="empty-state"><h5>No reviews yet</h5><p>This user has not received any reviews.</p></div>';
                }
            })
            .catch(error => {
                console.error('Error loading reviews:', error);
                document.getElementById('reviewsContainer').innerHTML = '<div class="alert alert-danger">Could not load reviews</div>';
            });
    }
</script>

