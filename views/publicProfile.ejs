<!-- PROFILE HEADER -->
<div class="container">
    <div class="profile-header">
        <% if (profileUser.profile_image_url) { %>
            <img src="<%= profileUser.profile_image_url %>" alt="Profile" class="profile-photo">
        <% } else { %>
            <div class="profile-initial">
                <%= profileUser.username ? profileUser.username.charAt(0).toUpperCase() : '?' %>
            </div>
        <% } %>

        <div class="profile-main">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                <div>
                    <div class="profile-username"><%= profileUser.username %></div>
                    <div class="profile-meta">
                        <% if (profileUser.gender) { %>
                            <span>Gender: <%= profileUser.gender %></span>
                        <% } %>
                    </div>
                </div>

                <div>
                    <span class="profile-pill">
                        <span class="profile-pill-dot"></span>
                        Public wardrobe
                    </span>
                    <% if (isSelf) { %>
                        <span class="ms-2 text-muted" style="font-size:0.8rem;">(This is how others see you)</span>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- TABS -->
<div class="container">
    <ul class="nav nav-tabs mb-3" id="profileTabs">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#publicWardrobe" type="button">
                Public Wardrobe
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#publicSwap" type="button">
                Swap Items
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#publicOOTD" type="button">
                OOTD Posts
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#reviews" type="button">
                Reviews
            </button>
        </li>
    </ul>
</div>

<!-- TAB CONTENT -->
<div class="container tab-content mb-5">

    <!-- PUBLIC WARDROBE -->
    <div class="tab-pane fade show active" id="publicWardrobe">
        <% if (publicItems && publicItems.length > 0) { %>
            <div class="row g-3">
                <% publicItems.forEach(item => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="item-card">

                            <div class="status-pill">
                                <span class="status-dot <%= item.is_for_swap === 1 ? '' : 'personal' %>"></span>
                                <%= item.is_for_swap === 1 ? 'Ready to swap' : 'Personal only' %>
                            </div>

                            <div class="item-image-wrapper">
                                <% if (item.image_url_1) { %>
                                    <img src="<%= item.image_url_1 %>" class="item-image" alt="Item image">
                                <% } else { %>
                                    <div class="item-image d-flex align-items-center justify-content-center text-muted">
                                        No image
                                    </div>
                                <% } %>
                            </div>

                            <div class="item-body">
                                <div class="d-flex justify-content-between align-items-start mb-1">
                                    <div>
                                        <div class="item-title"><%= item.title || 'Untitled item' %></div>
                                        <div class="item-brand"><%= item.brand_name || 'Unknown brand' %></div>
                                    </div>
                                    <% if (item.is_for_swap === 1) { %>
                                        <span class="badge-swap">Swap</span>
                                    <% } %>
                                </div>

                                <div class="chip-row">
                                    <% if (item.category) { %>
                                        <span class="chip chip--category"><%= item.category %></span>
                                    <% } %>
                                    <% if (item.size_label) { %>
                                        <span class="chip chip--size">Size: <%= item.size_label %></span>
                                    <% } %>
                                </div>

                                <% if (item.description) { %>
                                    <div class="item-description">
                                        <%= item.description %>
                                    </div>
                                <% } %>

                                <div class="item-meta">
                                    <% if (item.color) { %>
                                        <div><strong>Color:</strong> <%= item.color %></div>
                                    <% } %>
                                    <% if (item.condition_grade) { %>
                                        <div><strong>Condition:</strong> <%= item.condition_grade %></div>
                                    <% } %>
                                </div>
                            </div>

                            <div class="item-footer">
                                <div><span class="badge-public">Public</span></div>
                                <div class="text-muted">
                                    Wardrobe item
                                </div>
                            </div>

                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <h5>No public wardrobe items</h5>
                <p>This user has not made any wardrobe items public yet.</p>
            </div>
        <% } %>
    </div>

    <!-- PUBLIC SWAP ITEMS -->
    <div class="tab-pane fade" id="publicSwap">
        <% if (publicSwapItems && publicSwapItems.length > 0) { %>
            <div class="row g-3">
                <% publicSwapItems.forEach(item => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="item-card">

                            <div class="status-pill">
                                <span class="status-dot"></span>
                                Swap listing
                            </div>

                            <div class="item-image-wrapper">
                                <% if (item.image_url_1) { %>
                                    <img src="<%= item.image_url_1 %>" class="item-image" alt="Item image">
                                <% } else { %>
                                    <div class="item-image d-flex align-items-center justify-content-center text-muted">
                                        No image
                                    </div>
                                <% } %>
                            </div>

                            <div class="item-body">
                                <div class="d-flex justify-content-between align-items-start mb-1">
                                    <div>
                                        <div class="item-title"><%= item.title || 'Untitled item' %></div>
                                        <div class="item-brand"><%= item.brand_name || 'Unknown brand' %></div>
                                    </div>
                                    <span class="badge-swap">Swap</span>
                                </div>

                                <div class="chip-row">
                                    <% if (item.category) { %>
                                        <span class="chip chip--category"><%= item.category %></span>
                                    <% } %>
                                    <% if (item.size_label) { %>
                                        <span class="chip chip--size">Size: <%= item.size_label %></span>
                                    <% } %>
                                </div>

                                <% if (item.description) { %>
                                    <div class="item-description">
                                        <%= item.description %>
                                    </div>
                                <% } %>

                                <div class="item-meta">
                                    <% if (item.color) { %>
                                        <div><strong>Color:</strong> <%= item.color %></div>
                                    <% } %>
                                    <% if (item.condition_grade) { %>
                                        <div><strong>Condition:</strong> <%= item.condition_grade %></div>
                                    <% } %>
                                </div>
                            </div>

                            <div class="item-footer">
                                <div><span class="badge-public">Public</span></div>
                                <div class="text-muted">
                                    Swap ready
                                </div>
                            </div>

                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <h5>No swap items</h5>
                <p>This user has not listed any items for swap yet.</p>
            </div>
        <% } %>
    </div>

    <!-- PUBLIC OOTD POSTS -->
    <div class="tab-pane fade" id="publicOOTD">
        <% if (ootdPosts && ootdPosts.length > 0) { %>
            <div class="row g-4">
                <% ootdPosts.forEach(post => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="ootd-card">

                            <a href="/ootd/<%= post.post_id %>" style="text-decoration: none; color: inherit; display: block;">
                                <div class="ootd-image-wrapper">
                                    <%
                                        const imgList = [];
                                        if (post.image_url_1) imgList.push(post.image_url_1);
                                        if (post.image_url_2) imgList.push(post.image_url_2);
                                        if (post.image_url_3) imgList.push(post.image_url_3);
                                    %>

                                    <% if (imgList.length === 0) { %>
                                        <div class="ootd-image d-flex align-items-center justify-content-center text-muted">
                                            No image
                                        </div>
                                    <% } else if (imgList.length === 1) { %>
                                        <img src="<%= imgList[0] %>" alt="OOTD" class="ootd-image" style="cursor: pointer;">
                                    <% } else { %>
                                        <div id="publicOotdCarousel-<%= post.post_id %>" class="carousel slide w-100" data-bs-ride="carousel">
                                            <div class="carousel-inner">
                                                <% imgList.forEach((src, idx) => { %>
                                                    <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
                                                        <img src="<%= src %>" class="ootd-image d-block mx-auto" alt="OOTD image <%= idx + 1 %>" style="cursor: pointer;">
